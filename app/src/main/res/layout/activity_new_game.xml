<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arctoscreations.scorecard.NewGameActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="How many players?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNumPlayers"
            android:layout_weight="0"
            android:elevation="0dp"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ddlNumPlayers"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0"
            android:paddingLeft="@dimen/activity_horizontal_margin" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 1"
            android:ems="8"
            android:id="@+id/etxtPlayer1"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 2"
            android:ems="8"
            android:id="@+id/etxtPlayer2"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 3"
            android:ems="8"
            android:id="@+id/etxtPlayer3"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 4"
            android:ems="8"
            android:id="@+id/etxtPlayer4"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 5"
            android:ems="8"
            android:id="@+id/etxtPlayer5"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 6"
            android:ems="8"
            android:id="@+id/etxtPlayer6"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 7"
            android:ems="8"
            android:id="@+id/etxtPlayer7"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 8"
            android:ems="8"
            android:id="@+id/etxtPlayer8"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 9"
            android:ems="8"
            android:id="@+id/etxtPlayer9"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Player 10"
            android:ems="8"
            android:id="@+id/etxtPlayer10"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:text="Add Players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddPlayers"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
